command /tokenban <offline player>:
	permission: token.ban
	usage: &c/tokenban <player>
	trigger:
		if {tokenban.%player's uuid%} = false:
			set {tokenban.%arg-1's uuid%} to true
			send "&cBanned %arg-1% from tokenshop!"
		else if {tokenban.%player's uuid%} = false:
			set {tokenban.%arg-1's uuid%} to true
			send "&cBanned %arg-1% from tokenshop!"
		else if {tokenban.%player's uuid%} is true:
			set {tokenban.%arg-1's uuid%} to true
			send "&aUnbanned %arg-1% from tokenshop!"