command /tokenshop:
	aliases: /ts
	trigger:
		if {tokenban.%player's uuid%} = true:
			send "&4You have been banned from tokenshop!"
		else:
			set {_nbt1} to nbt compound from {@head}
			set {_h1} to a player head with nbt {_nbt1} 
			set metadata tag "tokenshop" of player to chest inventory with 4 rows named "&6&lToken Shop!"
			set slot 1, 2, 3, 4, 5, 6, 7, 8, 9, 17 , 18, 26, 27, 28, 29, 30, 31, 32, 33, 34 and 35 of metadata tag "tokenshop" of player to yellow stained glass pane named " "
			set slot 0 of metadata tag "tokenshop" of player to {_h1} Named "&eYour balance&8: &a%{tokens.%player's uuid%}%"
			set slot 10 of metadata tag "tokenshop" of player to shiny netherite sword named "&bBuy OP Sword for &6200" with lore "&2Sharpness 10, Fire Aspect 3, Knockback 5, Mending, Sweeping Edge 3"
			set slot 11 of metadata tag "tokenshop" of player to shiny bow named "&bBuy OP Bow for &6150" with lore "&2Flame 5, Punch 5, Power 10, Mending, Infinity 3"
			set slot 12 of metadata tag "tokenshop" of player to shiny netherite pickaxe named "&bBuy OP Pickaxe for &6150" with lore "&2Efficiency 20, Silk Touch 5, Unbreaking 5, Mending" 
			set slot 19 of metadata tag "tokenshop" of player to shiny netherite helmet named "&bBuy OP Helmet for &6100" with lore "&2Protection 7, Thorns 3, Mending"	
			set slot 20 of metadata tag "tokenshop" of player to shiny netherite chestplate named "&bBuy OP Chestplate for &6100" with lore "&2Protection 7, Thorns 3, Mending"	
			set slot 21 of metadata tag "tokenshop" of player to shiny netherite leggings named "&bBuy OP Leggings for &6100" with lore "&2Protection 7, Thorns 3, Mending"	
			set slot 22 of metadata tag "tokenshop" of player to shiny netherite boots named "&bBuy OP Boots for &6100" with lore "&2Protection 7, Thorns 3, Mending, Soul Speed 3"	
			set slot 25 of metadata tag "tokenshop" of player to record mall named "&4Music Disc Shop"
			set slot 13 of metadata tag "tokenshop" of player to shiny netherite axe named "&bBuy OP Axe for &6150" with lore "&2Efficiency 20, Mending, Silk Touch V, Unbreaking 3"
			set slot 14 of metadata tag "tokenshop" of player to barrier named "&4COMING SOON"
			set slot 15 of metadata tag "tokenshop" of player to barrier named "&4COMING SOON"
			set slot 16 of metadata tag "tokenshop" of player to barrier named "&4COMING SOON"
			set slot 24 of metadata tag "tokenshop" of player to barrier named "&4COMING SOON"
			set slot 23 of metadata tag "tokenshop" of player to barrier named "&4COMING SOON"
			open (metadata tag "tokenshop" of player) to player

